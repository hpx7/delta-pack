{
  "include": ["src", "test", "vitest.config.ts"],
  "compilerOptions": {
    /* Output configuration */
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@hpx7/delta-pack": ["src/index.ts"],
      "@hpx7/delta-pack/schema": ["src/schema.ts"],
      "@hpx7/delta-pack/helpers": ["src/helpers.ts"],
      "@hpx7/delta-pack/infer": ["src/infer.ts"],
      "@hpx7/delta-pack/parser": ["src/parser.ts"],
      "@hpx7/delta-pack/interpreter": ["src/interpreter.ts"]
    },

    /* Module Resolution */
    "moduleResolution": "bundler",
    "declaration": true,
    "esModuleInterop": true,
    "module": "preserve",
    "target": "esnext",
    "skipLibCheck": true,
    "isolatedModules": true,

    /* Decorators */
    "experimentalDecorators": true,

    /* Linting */
    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "forceConsistentCasingInFileNames": true
  }
}

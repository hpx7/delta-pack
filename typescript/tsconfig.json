{
  "include": ["src", "test"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@hpx7/delta-pack": ["./src/generator.ts"],
      "@hpx7/delta-pack/helpers": ["./src/helpers.ts"],
      "@hpx7/delta-pack/infer": ["./src/infer.ts"],
      "@hpx7/delta-pack/parser": ["./src/parser.ts"],
      "@hpx7/delta-pack/interpreter": ["./src/interpreter.ts"]
    }
  }
}

{
  "include": ["src", "test"],
  "compilerOptions": {
    /* Output configuration */
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@hpx7/delta-pack": ["src/index.ts"],
      "@hpx7/delta-pack/schema": ["src/schema.ts"],
      "@hpx7/delta-pack/helpers": ["src/helpers.ts"],
      "@hpx7/delta-pack/infer": ["src/infer.ts"],
      "@hpx7/delta-pack/parser": ["src/parser.ts"],
      "@hpx7/delta-pack/interpreter": ["src/interpreter.ts"],
      "@hpx7/delta-pack/codegen": ["src/codegen.ts"]
    },

    /* Module Resolution */
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
